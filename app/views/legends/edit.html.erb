<div class="row">
	<div class="span6 offset3 centered">

		<%= form_for(@legend) do |f| %> 
				<%= f.label :name %> 
				<%= f.text_field :name %>

				<%= f.label :description %> 
				<%= f.text_area :description %> 

				<%= f.label :image %> 			
