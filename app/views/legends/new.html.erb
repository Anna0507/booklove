<div class="row">
	<div class="span8 offset2 centered"> 
		<div class="new_form_for_legends">

			<%= form_for(@legend) do |f| %> 

				<%= f.label :name %> 
				<%= f.text_field :name %>

				<%= f.label :description %> 
				<%= f.text_area :description, rows: 8 %> 

				<%= f.label :image, "Image-Link" %> 
				<%= f.text_field :image %>  <br> 

				<%= f.submit "Submit", class: "btn btn-medium btn-warning" %> 

			<% end %>

		</div> 
	</div> 
</div> 