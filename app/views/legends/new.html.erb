<div class="row">
	<div class="span8 offset2 centered"> 

		<%= form_for(@legend) do |f| %> 

			<%= f.label :name %> 
			<%= f.text_field :name %>

			<%= f.label :description %> 
			<%= f.text_area :description, rows: 8 %> 

			<%= f.label :image %> 
			<%= f.text_area :image %>  <br> 

			<%= f.submit "Submit", class: "btn btn-medium btn-warning" %> 

		<% end %> 

	</div> 
</div> 