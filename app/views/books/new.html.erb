<div class="row">
	<div class="span8 offset2 centered ">

		<%= form_for([@legend,@book]) do |f| %> 

			<%= f.label :title %> 
			<%= f.text_field :title %> <br>

			<%= f.label :description %> 
			<%= f.text_area :description, rows: 8 %> <br>

			<%= f.label :image %> 
			<%= f.text_field :image %> <br>

			<%= f.label :link %> 
			<%= f.text_field :link %> <br>

			<%= f.submit "Submit", class: "btn btn-medium btn-warning" %>  

		<% end %> 

	</div>
</div>