<div class="row">
	<div class="span8 offset2 centered ">
		<div class="admin_form">

			<%= form_for([@legend,@book]) do |f| %> 

				<%= f.label :title %> 
				<%= f.text_field :title %> <br>

				<%= f.label :description %> 
				<%= f.text_area :description %> <br>

				<%= f.label :link, "Amazon-Link" %> 
				<%= f.text_field :link %> <br> <br>

				<%= f.label :image, "Image-Link" %> 
				<%= f.text_field :image %> <br> <br>

				<%= f.submit "Submit", class: "btn btn-medium btn-warning" %>  

			<% end %> 
	
		</div>
	</div>
</div>